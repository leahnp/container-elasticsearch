#!/bin/bash

# ------------------------------------------------------------------------------
# Need to do this to ensure that the current elasticsearch user in the container
# is the owner.  If the uid or gid changes this is important.
# Loop through the current WORKDIR (assume this is the data directory) and set
# the proper ownership.
for path in ./data ./logs ./config ./config/scripts ; do
    mkdir -p "$path"
    chown -R elasticsearch:elasticsearch "$path"
done